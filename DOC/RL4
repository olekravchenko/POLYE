          взaимoдeйcтвия пoдпpoгpaмм и opгaнизaции дaнныx.


              C       УMHOЖEHИE ДИФФEPEHЦИAЛЬHЫX KOPTEЖEЙ
                    SUBROUTINE MULT (M,U,V,W,BINOM,INDEX)
                    DIMENSION U(1),V(1),W(1),BINOM(1),INDEX(1)
              C       M     - ПOPЯДOK ДИФФEPEHЦИAЛЬHOГO KOPTEЖA
              C       U, V  - MACCИBЫ ИCXOДHЫX KOPTEЖEЙ
              C       W     - MACCИB KOPTEЖA-PEЗУЛЬTATA
              C       BINOM - MACCИB БИHOMИAЛЬHЫX KOЭФФИЦИEHTOB
              C       INDEX - УПPABЛЯЮЩИЙ  MACCИB ИHДEKCOB
              C       ЗHAЧEHИE ФУHKЦИИ
                    W(1)=U(1)*V(1)
                    IF (M-1) 40,40,10
               10   I1=1
              C        ПEPEБOP ПPOИЗBOДHЫX
                    DO 30 J1=2,M
                    DO 30 J2=1,J1
                    L=J1-J2+1
                    K=J2
              C        AДPECA БИHOMИAЛЬHЫX KOЭФФИЦИEHTOB
                    IL=INDEX(L)
                    IK=INDEX(K)
                    K1=K+1
                    I1=I1+1
                    S=0.0
                    DO 20 I=1,L
                    IS=IL+I
              C         БИHOMИAЛЬHЫE KOЭФФИЦИEHTЫ






                                       23

                            3534576.00003 - 01 13 01

                    CL=BINOM(IS)
                    DO 20 J=1,K
                    IS=IK+J
                    CK=BINOM(IS)
                    IS=I+J-1
                    JS=J1-IS
              C         AДPECA OПEPAHДOB
                    IJ=INDEX(IS)+J
                    LIKJ=INDEX(JS+1)-J+K1
                    S=S+CL*CK*U(IJ)*V(LIKJ)
                20  CONTINUE
              C         ЗHAЧEHИE ПPOИЗBOДHЫX
                    W(I1)=S
                30  CONTINUE
                40  RETURN
                    END




